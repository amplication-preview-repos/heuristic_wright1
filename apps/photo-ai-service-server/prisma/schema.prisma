datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Photo {
  createdAt      DateTime @default(now())
  generatedPhoto Json?
  id             String   @id @default(cuid())
  originalPhoto  Json?
  referencePhoto Json?
  style          String?
  updatedAt      DateTime @updatedAt
  user           User?    @relation(fields: [userId], references: [id])
  userId         String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  photos    Photo[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
